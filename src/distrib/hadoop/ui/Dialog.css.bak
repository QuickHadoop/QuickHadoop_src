
.background {
	-fx-background-image: url("images/grid.png");
    -fx-background-repeat: repeat;
	-fx-background-color:
        linear-gradient(#38424b 0%, #1f2429 20%, #191d22 100%),
        linear-gradient(#20262b, #191d22),
        radial-gradient(center 50% 0%, radius 100%, rgba(114,131,148,0.9), rgba(255,255,255,0));
}

.top-segment {
	-fx-background-color: rgba(255, 255, 255, 0.05);
	-fx-border-color: 
		transparent transparent rgba(255, 255, 255, 0.08) transparent,
		transparent transparent rgba(0, 0, 0, 0.5) transparent;
	-fx-border-width: 1, 1.5;
	-fx-border-insets: -1, 0; 
}

.label {
	-fx-font-family: "Arial";
    -fx-font-size: 14;
    -fx-text-fill: rgba(255, 255, 255, 0.4);
    -fx-effect: dropshadow( one-pass-box , rgba(0, 0, 0, 0.6), 0, 0.0 , 0 , 1 );
}

.label-err {
	-fx-font-family: "Arial";
    -fx-font-size: 14;
    -fx-text-fill: orangered;
    -fx-effect: dropshadow( one-pass-box , rgba(0, 0, 0, 0.6), 0, 0.0 , 0 , 1 );
}

.profileTitle {
    -fx-font-size: 18;
}

.hyperlink {
    -fx-font-family: "Arial";
    -fx-font-size: 18;
    -fx-text-fill: rgba(255, 255, 255, 0.4);
    -fx-effect: dropshadow( one-pass-box , rgba(0, 0, 0, 0.6), 0, 0.0 , 0 , 1 );
    -fx-border-width: 0;
}

.hyperlink:focused {
	-fx-text-fill: rgba(255, 255, 255, 0.6);
}

.check-box {
	-fx-text-fill: rgba(255, 255, 255, 0.4);
}

.button .text {
    -fx-effect: dropshadow( one-pass-box , rgba(0, 0, 0, 0.8), 0, 0.0 , 0 , -1 );
}

.button {
    -fx-background-color:
    	rgba(255, 255, 255, 0.08),
    	rgba(0, 0, 0, 0.8),
        #090a0c,
        linear-gradient(#4a5661 0%, #1f2429 20%, #1f242a 100%),
        linear-gradient(#242a2e, #23282e),
        radial-gradient(center 50% 0%, radius 100%, rgba(135,142,148,0.9),
        rgba(255,255,255,0));
    -fx-background-radius: 7, 6, 5, 4, 3, 5;
	-fx-font-family: "Arial";
    -fx-text-fill: white;
    -fx-font-size: 14;
    -fx-text-fill: linear-gradient(white, #d0d0d0);
    -fx-padding: 2 3 2 3;
}

.button:focused, .button:hover {
    -fx-background-color:
    	rgba(255, 255, 255, 0.08),
    	rgba(0, 0, 0, 0.8),
        #090a0c,
        linear-gradient(#4a5661 0%, #1f2429 20%, #1f242a 100%),
        linear-gradient(#3f4950, #23282e),
        radial-gradient(center 50% 0%, radius 100%, rgba(135,142,148,0.9),
        rgba(255,255,255,0));
}

.radio-button .text {
    -fx-effect: dropshadow( one-pass-box , rgba(0, 0, 0, 0.8), 0, 0.0 , 0 , -1 );
}

.radio-button {
    -fx-background-color: rgba(255, 255, 255, 0);
		-fx-font-family: "Arial";
    -fx-text-fill: white;
    -fx-font-size: 14;
    -fx-text-fill: linear-gradient(white, #d0d0d0);
    -fx-padding: 2 3 2 3;
}

.radio-button:focused, .radio-button:hover {
    -fx-background-color: rgba(255, 255, 255, 0.08);
}

.text-field, .text-area {
	-fx-font-size: 18;
    -fx-background-color:
    	rgba(255, 255, 255, 0.3),
    	linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.8) 50%),
        rgb(218, 226, 224);
    -fx-background-insets: 0 0 -1 0, 0, 1.5;
    -fx-background-radius: 6, 5, 4;
    -fx-padding: 6 10 4 10;
    -fx-effect: innershadow( gaussian, rgba(0, 0, 0, 0.8), 5, 0, 0, 2 );
    -fx-font-family: "Arial";
}

.text-area {
	-fx-padding: 6 5 6 5;
}

.text-field:focused, .text-area:focused {
    -fx-prompt-text-fill:
        rgba(128,128,128);
    -fx-background-color:
    	rgba(235, 235, 235, 0.5),
        rgba(0, 0, 0, 0.4),
        rgb(255, 255, 255);
}

#window-close {
    -fx-background-color: null;
    -fx-background-image: url("images/w_cls.png");
}
#window-min {
    -fx-background-color: null;
    -fx-background-image: url("images/w_min.png");
}
#window-close:hover {
	-fx-scale-x: 1.5;
	-fx-scale-y: 1.5;
}
#window-min:hover {
	-fx-scale-x: 1.5;
	-fx-scale-y: 1.5;
}
